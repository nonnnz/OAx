{
  "name": "quickoa",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "ai-service"
  ],
  "scripts": {
    "dev": "bun run --cwd frontend dev && bun run --cwd backend dev",
    "dev:frontend": "bun run --cwd ./frontend dev",
    "dev:backend": "bun run --cwd ./backend dev",
    "build": "bun run --cwd ./frontend build && bun run --cwd ./backend build",
    "start": "bun run --cwd ./backend start",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  }
}
